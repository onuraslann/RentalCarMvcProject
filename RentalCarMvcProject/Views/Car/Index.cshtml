@model List<RentalCarMvcProject.Models.EntityFramework.Cars>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success" href="/Car/Yeni">NewCarImage</a>
<table class="table table-bordered" style="background-color:darkgrey" id="tblCar">
    <thead>
        <tr>
            <th>Id</th>
            <th>BrandName</th>
            <th>ColorName</th>
            <th>ModelYear</th>
            <th>DailyPrice</th>
            <th>Descriptions</th>
           
            <th>Update</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
        <tr>
            <td>@car.Id</td>
            <td>@car.Brands.BrandName</td>
            <td>@car.Colors.ColorName</td>
            <td>@car.ModelYear</td>
            <td>@car.DailyPrice</td>
            <td>@car.Descriptions</td>

            <td><a class="btn btn-primary" href="/Car/Update/@car.Id">Update</a></td>
            <td><a class="btn btn-warning  btnCarDelete" data-id="@car.Id" >Delete</a></td>
        </tr>
        }
    </tbody>
</table>



